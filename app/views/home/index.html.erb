
<div class="people-list" id="people-list">
  <div class="title">
    <span>List of Users<span>
  </div>
  <div class="user-list">
    <ul class="list" data-current="<%= current_user.id%>">
      <% @users.each do |user| %>
        <li class="clearfix">
          <div class="about">
            <div class="name"><%= link_to user.username %> 
              <%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation",
                 "data-sid" => current_user.id, "data-rip" => user.id %>
            </div>
            <div class="status">
              <i class="fa fa-circle online"></i> online
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<div class="chat">

  <div id="chat-history">
      <p class="init-message">Choose the user to start conversation</p>

  </div>

</div>
